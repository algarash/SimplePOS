@model SimplePOS.Models.Inward

@{
    ViewData["Title"] = "Inward Transaction Details";
}

<h1>Inward Transaction Details</h1>

<div>
    <h4>Inward</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Supplier
        </dt>
        <dd class="col-sm-10">
            @Model.Supplier.Name
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
    </dl>

    <h4>Products</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.InwardProducts)
            {
                <tr>
                    <td>@product.Product.ProductName</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.InwardId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

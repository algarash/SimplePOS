@model Category

<div class="container">
    <h1>Add New Category</h1>
    <form asp-action="NewCategory" asp-controller="Category" method="post">
        <div class="form-group">
            <label asp-for="CategoryName">Product Name:</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryDescription">Product Description:</label>
            <textarea asp-for="CategoryDescription" class="form-control"></textarea>
        </div>
        <button type="submit" value="New Category" class="btn btn-primary">New Category</button>
    </form>
</div>
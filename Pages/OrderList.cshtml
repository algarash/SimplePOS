@page
@model OrderListModel

@{
    ViewData["Title"] = "Order List";
}

<h1 class="text-center">Orders List</h1>

<div class="d-flex justify-content-center align-items-center vh-50">
    <div class="card w-75">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Total</th>
                        <th>Order Placed</th>
                        <th>Number of Items</th>
                        <th>Customer Id</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderTotal.ToString("C")</td>
                            <td>@order.OrderPlaced.ToString("g")</td>

                            <td>
                                <h5>
                                    <a style="color:dodgerblue" class="link-text" asp-page="/OrderDetail" asp-route-orderId="@order.OrderId">
                                        <strong>@order.OrderItems?.Count</strong>
                                    </a>
                                </h5>
                            </td>
                            <td>@order.CustomerId</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

